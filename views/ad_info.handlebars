<div class='container'>

  <div class='row my-3 shadow-sm'>
    <div class='col'>
      <div class='row p-2 font-weight-bold text-capitalize' style='font-size: 1.2rem;background-color:rgb(212, 235, 255)'>
        {{title}}
      </div>
      <div class='row p-2 align-items-center text-capitalize' style='font-size: 1rem'>
        <div class="col-8 text-success">
          {{location}}
        </div>
        <div class="col-4 text-right font-weight-bold text-dark" style='font-size: 1.3rem'>
          Â£{{price}}
        </div>
      </div>
      {{#if distance}}
        <div class='row p-2' style='font-size: 1rem'>
          {{distance}} miles from {{../user.postcode}}
        </div>
      {{/if}}
    </div>
  </div>

  <div class='row shadow-sm'>
    <img class="img-fluid" src={{url}} alt="Item image" style='max-height: 600px'>
  </div>

  <div class='row my-3 shadow-sm' style='font-size: 1rem'>
    <div class='col'>
      <div class='row p-2 font-weight-bold' style='font-size: 1.1rem;background-color:rgb(212, 235, 255)'>Posted</div>
      <div class='row p-2 text-capitalize' style='font-size: 1rem'>
        {{createdAt}}
      </div>
    </div>
  </div>

  <div class='row my-3 shadow-sm'>
    <div class='col'>
      <div class='row p-2 font-weight-bold' style='font-size: 1.1rem;background-color:rgb(212, 235, 255)'>Description</div>
      <div class='row p-2 text-capitalize' style='font-size: 1rem'>
        {{description}}
      </div>
    </div>
  </div>

  <div class='row my-3 shadow-sm'>
    <div class='col'>
      <div class='row p-2 font-weight-bold' style='font-size: 1.1rem;background-color:rgb(212, 235, 255)'>Seller</div>
      <div class='row p-2 text-capitalize' style='font-size: 1rem'>
        {{seller_name}}
      </div>
      <div class='row p-2 text-success' style='font-size: 1rem'>
        {{contact_email}}
      </div>
    </div>
  </div>

</div>


