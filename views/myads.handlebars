<div class='container'>
  <h4 class='text-center m-3'>
    My adverts
  </h4>
  
  {{#if errorMessage}}
    {{> error_message}}
  {{/if}}
  {{#if successMessage}}
    {{> success_message}}
  {{/if}}

  {{#each ads}}
    <div class='ads card shadow bg-light mb-1'>
      <div class='card-body'>

        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            {{#each urls}}
            {{#if @first}}
              <div class="carousel-item active">
                <img class="d-block w-100" src={{this}} alt="Item image">
              </div>
            {{else}}
              <div class="carousel-item">
                <img class="d-block w-100" src={{this}} alt="Item image">
              </div>
            {{/if}}
            {{/each}}
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        
        <div class='p-2 font-weight-bold'>
          <h5 class='font-weight-bold'>{{title}}</h5>
          <h5>Â£{{price}}</h5>
        </div>
          <div class='p-2'>
            <h6 class='font-weight-bold'>Description</h6>
            <p>{{description}}</p>
          </div>
          <div class='p-2'>
            <h6 class='font-weight-bold'>Categories</h6>
            <p>{{categories}}</p>
          </div>
          <div class='p-2'>
            <h6 class='font-weight-bold'>Location</h6>
            <p>{{location}}</p>
          </div>
          <div class='p-2'>
            <h6 class='font-weight-bold'>Contact Email</h6>
            <p>{{contact_email}}</p>
          </div>
          <div class='p-2'>
            <h6 class='font-weight-bold'>Posted on</h6>
            <p>{{createdAt}}</p>
          </div>
          <div class='p-2'>
            <h6 class='font-weight-bold'>Updated At</h6>
            <p>{{updatedAt}}</p>
          </div>

          <form class='text-center my-1' action='/ads/edit' method='POST'>
            <input name='id' id='id' type='hidden' value={{id}}>
            <button class='btn btn-info text-center text-white' type='submit' style='width: 40%'>
              Edit
            </button>
          </form>
        
      </div>    
    </div>
  {{else}}
    <p>No adverts posted</p>
  {{/each}}
</div>

