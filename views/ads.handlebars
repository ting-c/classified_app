<div class='container'>
  <h4 class='text-center m-3'>
    {{#if term}}
      Search results for {{term}}
    {{else}}
      All ads
    {{/if}}
  </h4>

  {{#each ads}}
  <div class='ads card m-3 shadow bg-light'>
    <div class='card-body'>
      <h5 class='bg-secondary p-2 font-weight-bold'>{{title}}</h5>
      <div class='bg-light p-2'>
        <h6 class='font-weight-bold'>Description</h6>
        <p>{{description}}</p>
      </div>

      <table class='table table-borderless'>
        <tr>
          <td>Price</td>
          <td>Â£ {{price}}</td>
        </tr>
        <tr>
          <td>Categories</td>
          <td>{{categories}}</td>
        </tr>
        <tr>
          <td>Location</td>
          <td>{{location}}</td>
        </tr>
        <tr>
          <td>Contact Email</td>
          <td>{{contact_email}}</td>
        </tr>
        <tr>
          <td>Posted at</td>
          <td>{{createdAt}}</td>
        </tr>
      </table>      
    </div>
  </div>
  {{else}}
    <p>No adverts posted</p>
  {{/each}}
</div>

