<div class='container'>

  <h3 class='text-center m-3'>Login</h3>
  <div class='text-center text-danger'>{{messages.error}}</div>

  <div class='ads row m-2 d-flex flex-column align-items-center'>
    
    <form class='form d-flex flex-column align-items-center' action='/login' method='POST'>
      <div class="form-group">
        <label for="email">Email</label>
        <input name="email" type="email" class="form-control" id="email" required value={{email}}>
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input name="password" type="password" class="form-control" id="password" required >
      </div>

      <button type="submit" class="btn btn-primary" style='width:100%'>Login</button>
    </form>
  </div>

<br>

  <div class='row d-flex justify-content-center'>Don't have an account ?
    <span class='mx-2'><a href='/register'>Sign up here</a></span>
  </div>

</div>